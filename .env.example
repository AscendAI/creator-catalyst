# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Application Configuration
# Node environment (development, production)
NODE_ENV=development

# Base URL for the application
APP_URL=http://localhost:5000

# Session Configuration
# Secret key for session management
SESSION_SECRET=your-session-secret-key-here

# JWT Configuration
# Secret key for JWT token signing
JWT_SECRET=your-jwt-secret-key-here

# Email Configuration
# Resend API key for email services
RESEND_API_KEY=your-resend-api-key-here

# ScrapeCreators API Configuration
# API key for ScrapeCreators service (both spellings supported for backward compatibility)
SCRAPECREATORS_API_KEY=your-scrapecreators-api-key-here

# Replit Configuration (optional - auto-detected on Replit)
# REPLIT_DEV_DOMAIN=your-app.repl.co
# REPLIT_DOMAINS=your-app.repl.co
